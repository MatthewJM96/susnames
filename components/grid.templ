package components

import "github.com/MatthewJM96/susnames/grid"

templ card(card *grid.Card) {
	<div class="card">{ card.Word }</div>
}

templ Grid(grid *grid.Grid) {
	<div id="grid">
		for i := range 5 {
			<div class="card-row">
				for j := range 5 {
					@card(&grid.Cards[i * 5 + j])
				}
			</div>
		}
	</div>
}
